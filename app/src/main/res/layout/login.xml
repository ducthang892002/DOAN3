<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="367dp"
        android:src="@drawable/logoxe" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/allerta_stencil"
        android:gravity="center"
        android:text="WELCOME TO AUTO CAR"
        android:textColor="#C3E51E46"
        android:textStyle="italic"
        android:textSize="20sp" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:padding="20dp"
        android:orientation="vertical">
        <Button
            android:onClick="callLoginFromWel"
            android:id="@+id/btndangnhap"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Sign in"
            android:textColor="#090909"
            android:textStyle="bold"
            android:transitionName="transition_login"
            android:background="@drawable/editbuttonlogin"/>
        <Button
            android:onClick="callSignUpFromWel"
            android:id="@+id/btndangky"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            android:text="Sign up"
            android:background="@drawable/editbuttonlogin"
            android:textStyle="bold"
            android:textColor="#090909"
            android:transitionName="transition_singup"/>
    </LinearLayout>


</LinearLayout>